<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90EBF7"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-1dp">


    <include
        layout="@layout/header"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="84dp"
                android:layout_height="84dp"
                app:srcCompat="@drawable/white_button"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView_name"
                android:layout_width="107dp"
                android:layout_height="33dp"
                android:text="Name"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="29dp" />

            <TextView
                android:id="@+id/textView_change_profilePicture"
                android:layout_width="179dp"
                android:layout_height="26dp"
                android:text="Change Profile Picture"
                android:textColor="#0047AB"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="62dp" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:text="Change Password >"
                android:textColor="#0047AB"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="396dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="130dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="216dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="318dp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="311dp"
                android:layout_height="26dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="261dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="313dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/curved_rectangle"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="168dp" />

            <ImageView
                android:id="@+id/imageView_rec1"
                android:layout_width="313dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/curved_rectangle"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="360dp" />

            <ImageView
                android:id="@+id/imageView4_rec2"
                android:layout_width="313dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/curved_rectangle"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="261dp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="313dp"
                android:layout_height="26dp"
                android:ems="10"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="361dp" />

            <CheckBox
                android:id="@+id/checkBox_dark"
                android:layout_width="171dp"
                android:layout_height="34dp"
                android:text="Enable dark mode"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="508dp" />

            <CheckBox
                android:id="@+id/checkBox_photo"
                android:layout_width="176dp"
                android:layout_height="43dp"
                android:text="Enable photo sharing"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="424dp" />

            <CheckBox
                android:id="@+id/checkBox_calender"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:text="Enable calender"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="465dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="176dp"
                android:layout_height="46dp"
                android:text="Save"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="561dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <include
            layout="@layout/footer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
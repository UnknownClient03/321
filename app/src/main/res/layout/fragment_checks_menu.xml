<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_checks_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout_checks_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Buttons for each check -->
        <Button
            android:id="@+id/buttonsummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary Of Checks"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_1_4_weeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1-4 Weeks"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_6_8_weeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-8 Weeks"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_4_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Month"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_6_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 Month"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_12_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 Month"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_18_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18 Month"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_2_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Year"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_3_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Year"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/button_4_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Year"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>

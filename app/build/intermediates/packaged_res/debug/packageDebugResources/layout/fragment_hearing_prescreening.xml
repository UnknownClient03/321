<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_hearingPreScreening"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout_hearingPreScreening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hearing PreScreening Title -->
        <TextView
            android:id="@+id/textView_hearingPreScreening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hearing PreScreening"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="16dp" />

        <!-- Question 1 -->
        <LinearLayout
            android:id="@+id/layout_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have completed the health risk factor questions"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question1_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question1_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Question 2 -->
        <LinearLayout
            android:id="@+id/layout_question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My baby had severe breathing problems at birth"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question2_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question2_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Question 3 -->
        <LinearLayout
            android:id="@+id/layout_question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My baby had meningitis"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question3_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question3_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Question 4 -->
        <LinearLayout
            android:id="@+id/layout_question4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My baby had jaundice, requiring an exchange transfusion"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question4_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question4_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Question 5 -->
        <LinearLayout
            android:id="@+id/layout_question5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My baby was in intensive care for more than 5 days after birth"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question5_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question5_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Question 6 -->
        <LinearLayout
            android:id="@+id/layout_question6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have noticed something unusual about my babyâ€™s head or neck, such as an unusually shaped face, or skin tags"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question6_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question6_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Question 7 -->
        <LinearLayout
            android:id="@+id/layout_question7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView_question7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My baby has Down Syndrome (Trisomy 21) or another condition associated with hearing loss"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroup_question7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_question7_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_question7_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/textView_instructions_hearing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other than question 1, If you answered 'Yes' to any of the above, please inform your doctor or child and family health nurse."
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_saveHearingPreScreening"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/button_3d"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>